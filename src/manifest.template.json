{
  "name": "DocuMentor AI",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "AI-powered documentation mentor",
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "permissions": ["tabs", "scripting", "sidePanel", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "trial_tokens": ["{{TRIAL_TOKEN}}"],
  "minimum_chrome_version": "138",
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open DocuMentor AI"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/scripts/selection-menu.ts", "src/scripts/image-menu.ts"],
      "run_at": "document_idle"
    }
  ]
}
